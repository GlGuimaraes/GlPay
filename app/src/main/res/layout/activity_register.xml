<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="28dp"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".register">



    <ImageView
        android:id="@+id/image_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24" />
    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:alpha="0.2"
        android:layout_centerVertical="true"
        android:contentDescription="@string/logo"
        android:src="@drawable/logobackground" />

    <EditText
        android:id="@+id/edit_Nome"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="12dp"
        android:autofillHints="Email"
        android:background="@color/backgroundInputLogin"
        android:hint="   Nome"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />

    <EditText
        android:id="@+id/edit_Sobrenome"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_Nome"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Sobrenome"
        android:layout_marginBottom="12dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />
    <EditText
        android:id="@+id/edit_numero"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_Sobrenome"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Celular"
        android:layout_marginBottom="12dp"
        android:inputType="numberDecimal"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />
    <EditText
        android:id="@+id/edit_Email"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/edit_numero"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />
    <EditText
        android:id="@+id/edit_confirmarEmail"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@+id/edit_Email"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Confirmar Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />
    <EditText
        android:id="@+id/edit_Senha"
        android:layout_width="488dp"
        android:layout_marginBottom="12dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_confirmarEmail"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Senha"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />
    <EditText
        android:id="@+id/edit_confirmarSenha"
        android:layout_width="488dp"
        android:layout_height="48dp"
        android:layout_below="@+id/edit_Senha"
        android:autofillHints="Senha"
        android:background="@color/backgroundInputLogin"
        android:hint="   Confirmar Senha"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/textColorInputLogin" />

    <Button
        android:id="@+id/button_Login"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_below="@id/edit_confirmarSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="#f58517"
        android:text="Confirmar"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By: Guilherme GuimarÃ£es"
        android:textColor="#2CF58517"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>